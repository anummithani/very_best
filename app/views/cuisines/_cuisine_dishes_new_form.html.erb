<%= form_with(model: @dish, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <%= f.hidden_field :cuisine_id, value: @cuisine.id %>

  <div class="form-group">
    <%= f.label :venue_id %>

    <%= f.collection_select :venue_id, Venue.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <div class="form-check">
    <%= f.check_box :loved, class: "form-check-input" %>
    <%= f.label :loved, class: "form-check-label" %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.submit "Create dish", class: "btn btn-block btn-outline-secondary" %>
<% end %>
